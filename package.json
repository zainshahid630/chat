{
  "name": "chatdesk-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Customer Service Chat SaaS Platform",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "dev:web": "npm run dev --workspace=@chatdesk/web-dashboard",
    "dev:shared": "npm run dev --workspace=@chatdesk/shared",
    "build:web": "npm run build --workspace=@chatdesk/web-dashboard",
    "build:shared": "npm run build --workspace=@chatdesk/shared"
  },
  "devDependencies": {
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=21.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.2",
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
